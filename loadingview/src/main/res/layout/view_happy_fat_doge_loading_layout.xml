<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_happy_fat_wood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_expression"
            android:layout_width="@dimen/common_width_100dp"
            android:layout_height="@dimen/common_height_100dp"
            android:src="@drawable/fat_doge_thinking00"
            android:contentDescription="@string/happy_fat_doge_expression" />

        <ImageView
            android:id="@+id/image_bubble"
            android:layout_width="@dimen/common_width_100dp"
            android:layout_height="@dimen/common_height_100dp"
            android:src="@drawable/fat_doge_angry_bubble"
            android:visibility="gone"
            android:contentDescription="@string/happy_fat_doge_bubble" />

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_expression"
            android:layout_centerHorizontal="true"
            android:text="@string/alarm_clock_progress"
            android:textColor="@color/color_E6CA7E"
            android:textSize="@dimen/common_font_14sp"
            android:includeFontPadding="false"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_happy_fat_wood"
        android:layout_centerHorizontal="true"
        android:text="@string/alarm_clock_description"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/common_font_12sp"
        android:includeFontPadding="false"
        android:visibility="gone"/>

</RelativeLayout>