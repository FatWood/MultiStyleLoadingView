<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.fatdoge.loadingview.waveball.RingView
        android:id="@+id/ring_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.fatdoge.loadingview.waveball.OvalRingView
        android:id="@+id/oval_ring_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wave_ball_progress"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:includeFontPadding="false"
            android:textSize="@dimen/common_font_30sp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/description"
            android:textColor="@color/color_4A4A4A"
            android:textSize="@dimen/common_font_15sp"/>

    </LinearLayout>

</RelativeLayout>